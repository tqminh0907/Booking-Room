@{
}

<div class="card">
    <div class="card-header">
        Services
        <a class="btn btn-primary float-end"
           asp-area=""
           asp-controller="Service"
           asp-action="Add">ADD</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Services != null)
                    {
                        int i = 1;
                        @foreach (var service in ViewBag.Services)
                        {
                            <tr>
                                <th scope="row">@service.Id</th>
                                <td>@service.Id</td>
                                <td>@service.Name</td>
                                <td>@service.Description</td>
                                <td>@service.Price</td>
                                <td>
                                    <a class="btn btn-danger" href="/Service/Delete/@service.Id">Delete</a>
                                    <a class="btn btn-warning" href="/Service/Edit/@service.Id">Edit</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center" colspan="7">Empty</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>